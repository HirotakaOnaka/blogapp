<section class="section">
<div class="container">

  <h2 class="text-center title">DETAIL</h2>

  <div class="row">
  <div class="col-md-offset-2 col-md-8">
    <table class="blog_confirm">
      <tr>
        <td>
          <h5>Title</h5>
          <%= @blog.title %>
        </td>
      </tr>
      <tr>
        <td>
          <h5>Content</h5>
          <%= text_url_to_link(h(simple_format(@blog.content))).html_safe %>
        </td>
      </tr>
    </table>

  <p>
    <% unless @blog.user_id == current_user.id%>
    <div class="btn_center">
      <% if @favorite.present? %>
        <%= link_to "DROP BOOKMARK", favorite_path(id: @favorite.id), method: :delete, class:'btn btn-primary' %>
      <% else %>
        <%= link_to "BOOKMARK", favorites_path(blog_id: @blog.id), method: :post, class:'btn btn-warning' %>
      <% end %>
    </div>
    <% end %>
  </p>

  </div>
  </div>

  <h5 class="text-center"><%= link_to "Go to ARCHIVES", blogs_path %></h4>

</div>
</section>