<!DOCTYPE html>
<html>
  <head>
    <title>Blogapp</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Fonts -->
  	<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  	<link href='//fonts.googleapis.com/css?family=Wire+One' rel='stylesheet' type='text/css'>
  </head>

  <body>

  <header>
    <img src="../../images/mynotes.png">
  </header>

  <nav class="mainmenu">
  	<div class="container">
  		<div class="dropdown">
  			<button type="button" class="navbar-toggle" data-toggle="dropdown">
  			  <span class="icon-bar"></span>
  			  <span class="icon-bar"></span>
  			  <span class="icon-bar"></span>
  			</button>
  <% if logged_in? %>
  			<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
  				<li><%= link_to 'TOP', root_path %></li>
  				<li><%= link_to 'ARCHIVES', blogs_path %></li>
  				<li><%= link_to 'NEW POST', new_blog_path %></li>
  			</ul>
  <% else %>
  			<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
  			  <li><%= link_to 'Sign up', new_user_path %></li>
          <li><%= link_to 'Login', new_session_path %></li>
        </ul>
  <% end %>
  		</div>
  	</div>
  </nav>

    <%= yield %>

  <footer>
    <p>Â© 2018 Hirotaka Onaka</p>
  </footer>
  
  </body>
</html>
