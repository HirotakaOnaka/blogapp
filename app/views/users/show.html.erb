<section class="section">
<div class="container">

  <div class="row">
  <div class="col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1 text-center">	
    <p class="subtitle">WELCOME TO MY NOTES!!</p>
  	  <h3 class="tagline">
	    ようこそ<%= @user.name %>さん
	    <br>まずは投稿してみましょう。
  	  </h3>
　　　<div>
        <%= link_to 'NEW POST', new_blog_path, class:'btn btn-default btn-lg' %>
      </div>
  </div>
  </div>

  <h2 class="text-center title underbutton">YOUR FAVORITES</h2>
  <div class="row">
    <% @favorites_blogs.reverse_each do |favorite_blog| %>
    <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
    <div class="caption">
      <h3><%= favorite_blog.title %></h3>
	  <p><%= favorite_blog.content.truncate(20) %></p>
	  <p>
	    <%= link_to 'DETAIL', favorite_blog, class: 'btn btn-default' %>
	  </p>
	  <p>posted by : <%= favorite_blog.user.name %></p>
	</div>
	</div>
	</div>
    <% end %>
  </div>
</div>
</section>