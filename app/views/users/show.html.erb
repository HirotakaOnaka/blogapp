<section class="section">
<div class="container">

<div class="row">
  <div class="col-md-6">
    <h2 class="text-center title">YOUR PROFILE</h2>
    <div class="thumbnail_black">
    <div class="caption">

        <div>
          <% if @user.image.present? %>
            <%= image_tag @user.image.thumb, class:'profile_image' %>
          <% else %>
            <%= image_tag "/user-icon.png" %>
          <% end %>
        </div>
        <h3>USERNAME</h3>
        <p><%= @user.name %></p>
        <h3>Email</h3>
        <p><%= @user.email %></p>
        <p>
          <%= link_to 'EDIT', edit_user_path(current_user),class:'btn btn-default' %>
        </p>
    </div>
    </div>
  </div>

  <div class="col-md-6">
    <h2 class="text-center title underbutton">YOUR FAVORITES</h2>
    <div class="row">
    <% @favorites_blogs.reverse_each do |favorite_blog| %>
      <div class="col-md-12 col-ls-12">
      <div class="thumbnail">
      <div class="caption">
        <h3><%= favorite_blog.title %></h3>
        <p><%= favorite_blog.content.truncate(20) %></p>
        <p><%= image_tag favorite_blog.image %></p>
        <p>
          <%= link_to 'DETAIL', favorite_blog, class: 'btn btn-default' %>
        </p>
        <p>posted by : <%= favorite_blog.user.name %></p>
      </div>
      </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

</div>
</section>